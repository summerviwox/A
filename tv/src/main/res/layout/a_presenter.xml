<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <LinearLayout
        android:id="@+id/top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:focusable="true"
        android:text="A"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sw_150dp">
        <TextView
            android:text="top"
            android:background="@color/color_4c787e"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:focusable="true"
        android:id="@+id/bottom"
        android:descendantFocusability="beforeDescendants"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sw_50dp">

        <TextView
            android:text="AAA"
            android:focusable="true"
            android:background="@color/color_4cc417"
            android:layout_weight="1"
            android:layout_width="@dimen/sw_0dp"
            android:layout_height="match_parent"/>

        <TextView
            android:text="BBB"
            android:focusable="true"
            android:background="@color/color_9172ec"
            android:layout_weight="1"
            android:layout_width="@dimen/sw_0dp"
            android:layout_height="match_parent"/>

        <TextView
            android:text="CCC"
            android:focusable="true"
            android:background="@color/color_c2dfff"
            android:layout_weight="1"
            android:layout_width="@dimen/sw_0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>